<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:layout_alignParentTop="true"
    android:background="@color/main_blue"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        >
        <ImageView
            android:id="@+id/home_qr_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/round_qr_code_scanner_24"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            app:tint="#fff"
            android:layout_toStartOf="@id/home_notification"
            />

        <RelativeLayout
            android:id="@+id/home_notification"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/round_notifications_24"
                app:tint="#fff"
                />

            <TextView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:text="1"
                android:background="@drawable/circle"
                android:backgroundTint="#f00"
                android:gravity="center"
                android:textSize="8sp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_curve_20dp"
            android:backgroundTint="@color/splash3"
            android:layout_toStartOf="@+id/home_qr_icon"
            android:layout_marginEnd="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#fff"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/baseline_keyboard_voice_24"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                app:tint="#fff"
                />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>