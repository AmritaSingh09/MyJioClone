<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentTop="true"
    android:background="@color/main_music"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_margin="20dp"
        >

        <ImageView
            android:id="@+id/music_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/round_arrow_back_ios_24"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            app:tint="#000"
            android:layout_alignParentStart="true"
            />

        <ImageView
            android:id="@+id/load_img_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/round_music_note_24"
            android:layout_centerVertical="true"
            android:background="@drawable/circle"
            android:backgroundTint="@color/main_music"
            android:layout_marginEnd="15dp"
            app:tint="#fff"
            android:layout_toEndOf="@id/music_back_btn"
            />

        <TextView
            android:id="@+id/text_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Music"
            android:textSize="14sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_toEndOf="@id/load_img_music"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/home_qr_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/round_search_24"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            app:tint="#000"
            android:layout_toStartOf="@id/music_qr_icon"
            />


        <ImageView
            android:id="@+id/music_qr_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/round_qr_code_scanner_24"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            app:tint="#000"
            android:layout_toStartOf="@id/home_notification"
            />

        <RelativeLayout
            android:id="@+id/home_notification"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/round_notifications_24"
                app:tint="#000"
                />

            <TextView
                android:id="@+id/no_of_notification"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:text="1"
                android:background="@drawable/circle"
                android:backgroundTint="#f00"
                android:gravity="center"
                android:textSize="8sp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#DFDFDF"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/round_music_note_24"
            android:background="@drawable/circle"
            android:backgroundTint="@color/main_music"
            android:padding="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JioSaavn"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:textColor="#1E1E1E"
            android:textStyle="bold"
            android:textSize="15sp"
            />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#9E9E9E"
            android:layout_marginHorizontal="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Home for Music, Podcasts and JioTunes"
            android:layout_gravity="center_vertical"
            android:textColor="#1E1E1E"
            android:textSize="13sp"
            />



    </LinearLayout>


</LinearLayout>